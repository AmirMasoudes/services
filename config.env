# ========================================
# DJANGO BACKEND + SHARED SERVICES
# ========================================
# Production-ready environment configuration
# Replace all placeholders with actual values

# ========================================
# DJANGO CORE
# ========================================
SECRET_KEY=YOUR_DJANGO_SECRET_KEY_HERE
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# DATABASE
# ========================================
# SQLite (default for development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# PostgreSQL (uncomment for production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=your_db_name
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# ========================================
# SECURITY
# ========================================
CSRF_TRUSTED_ORIGINS=http://localhost,https://localhost
SECURE_HSTS_SECONDS=0
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ========================================
# TELEGRAM BOTS
# ========================================
ADMIN_BOT_TOKEN=YOUR_ADMIN_BOT_TOKEN_HERE
USER_BOT_TOKEN=YOUR_USER_BOT_TOKEN_HERE
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD_HERE
ADMIN_USER_IDS=YOUR_TELEGRAM_USER_ID

# ========================================
# X-UI PANEL
# ========================================
XUI_DEFAULT_HOST=your_xui_host
XUI_DEFAULT_PORT=2053
XUI_DEFAULT_USERNAME=your_xui_username
XUI_DEFAULT_PASSWORD=your_xui_password
XUI_WEB_BASE_PATH=/your_base_path/
XUI_USE_SSL=True
XUI_VERIFY_SSL=False
XUI_TIMEOUT=30

# ========================================
# S-UI PANEL
# ========================================
SUI_HOST=localhost
SUI_PORT=2095
SUI_USE_SSL=False
SUI_BASE_PATH=/app
SUI_API_TOKEN=YOUR_SUI_API_TOKEN_HERE

# ========================================
# SERVER CONFIGURATION
# ========================================
SERVER_IP=your_server_ip
SERVER_DOMAIN=your_domain.com
SERVER_PORT=8000
SERVER_PROTOCOL=http

# ========================================
# VPN PROTOCOL SETTINGS
# ========================================
DEFAULT_PROTOCOL=vless
MIN_PORT=10000
MAX_PORT=65000
TLS_ENABLED=True
REALITY_ENABLED=True
REALITY_DEST=www.aparat.com:443
REALITY_SERVER_NAMES=www.aparat.com
REALITY_PRIVATE_KEY=YOUR_REALITY_PRIVATE_KEY_HERE
WS_PATH=/
WS_HOST=

# ========================================
# TRIAL & PLAN CONFIGURATION
# ========================================
TRIAL_HOURS=24
PAID_DAYS=30
EXPIRY_WARNING_HOURS=6
EXPIRY_WARNING_MESSAGE=کانفیگ شما تا {hours} ساعت دیگر منقضی می‌شود ⏰

# ========================================
# NAMING PREFIXES
# ========================================
TRIAL_INBOUND_PREFIX=TrialBot
PAID_INBOUND_PREFIX=PaidBot
USER_INBOUND_PREFIX=UserBot

# ========================================
# CONNECTION SETTINGS
# ========================================
CONNECTION_TIMEOUT=15
RETRY_ATTEMPTS=5

# ========================================
# CELERY
# ========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
